package aplication;

import java.util.ArrayList;
import java.util.List;

public class ProgramaList {

	public static void main(String[] args) {


	  List <String> list = new ArrayList <> ();
	  
	  list.add("Maria");
	  list.add("Alex");
	  list.add("Bob");
	  list.add("Ana");
	  list.add(2, "Marco");
	  
	  System.out.println(list.size());
	  for(String x: list) {
		  System.out.println(x); 
	  }
	  System.out.println("-----------------------");
	  list.remove(1);
	  for(String x: list) {
		  System.out.println(x); 
	  }
	  
	}

}
